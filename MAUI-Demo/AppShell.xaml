<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_Demo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI_Demo"
    xmlns:mvvmView="clr-namespace:MAUI_Demo.MVVM.Views"
    Shell.FlyoutBehavior="Locked">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Bookings View"
        ContentTemplate="{DataTemplate mvvmView:BookingsView}"
        Route="BookingsView" />

    <ShellContent
        Title="Tabbed Pages"
        ContentTemplate="{DataTemplate local:TabbedDemo}"
        Route="TabbedDemo" />
    
    <ShellContent
        Title="Okta Sign-In"
        ContentTemplate="{DataTemplate local:OktaSignIn}" 
        Route="OktaSignIn" />

</Shell>
